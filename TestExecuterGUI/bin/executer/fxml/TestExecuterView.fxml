      <Label text="Test" GridPane.rowIndex="7" />
      <Label text="Gesamt" GridPane.rowIndex="8" />
      <Separator maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="5">
         <GridPane.margin>
            <Insets bottom="10.0" top="10.0" />
