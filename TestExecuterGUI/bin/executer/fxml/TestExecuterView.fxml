                    <items>
                      <MenuItem fx:id="miAddFile" mnemonicParsing="false" onAction="#contextMenuAddFileAction" text="Dateien hinzuf端gen" />
                        <MenuItem fx:id="miAddDirectory" mnemonicParsing="false" onAction="#contextMenuAddDirectoryAction" text="Ordner hinzuf端gen" />
                        <MenuItem fx:id="miRemove" mnemonicParsing="false" onAction="#contextMenuRemoveAction" text="Entfernen" />
                        <MenuItem fx:id="miRemoveAll" mnemonicParsing="false" onAction="#contextMenuRemoveAllAction" text="Alles entfernen" />
